<!DOCTYPE html>
<html lang="<%= it.siteConfig.language %>">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= it.siteConfig.title %></title>
    <link
      rel="alternate"
      type="application/rss+xml"
      title="<%= it.siteConfig.title %>"
      href="<%= it.siteConfig.feed_url %>"
    />
    <link rel="stylesheet" href="/style/style.css">
<script type="module" src="/js/index.js"></script>
  </head>
  <body>
    <div id="container">
      <header>
        <h1 class="blogTitle">
          <a href="<%= it.siteConfig.site_url %>"><%= it.siteConfig.title %></a>
        </h1>
      </header>
      <div id="content">
        <% it.articles.forEach(function(i){ %>
          <div class="item">
            <h4 class="itemTitle">
              <a href="<%= i.url %>"><%= i.title %></a>
            </h4>
            <div>
              <span class="date"><%= i.date %></span><span class="author"><%= i.author %></span>
            </div>
            <div class="itemContent">
              <%~ i.description %>
            </div>
          </div>
        <% }) %>
      </div>
      <footer>
        <p>Â© <span id="copyright"><%= it.siteConfig.copyright %></span></p>
      </footer>
    </div>
  </body>
</html>
